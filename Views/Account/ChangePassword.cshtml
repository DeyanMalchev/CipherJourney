@model ChangePasswordModel
@{
    ViewData["Title"] = "CipherJourney - Change Password";
}

@* Use Bootstrap container and grid for layout and centering *@
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @* Control the width of the form container *@

            <div class="card shadow-sm">
                @* Use a card for better visual structure, add subtle shadow *@
                <div class="card-body p-4">
                    @* Add padding inside the card *@

                    <h2 class="card-title text-center mb-4">Change Password</h2>

                    <form asp-action="ChangePassword" method="post">
                        @* Optional: Display model-level errors if needed
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        *@

                        @* Form Group for Current Password *@
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                            <input asp-for="CurrentPassword" class="form-control" type="password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span> @* Bootstrap validation text styling *@
                        </div>

                        @* Form Group for New Password *@
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">New Password</label>
                            <input asp-for="NewPassword" class="form-control" type="password" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        @* Form Group for Confirm Password *@
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        @* Button - Using d-grid for better full-width button spacing *@
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">
                                @* Use btn-primary for the main action blue *@
                                Change Password
                            </button>
                        </div>
                    </form>

                </div> @* End card-body *@
            </div> @* End card *@

        </div> @* End column *@
    </div> @* End row *@
</div> @* End container *@