@model CipherJourney.Models.AccountModel

@{
    ViewData["Title"] = "CipherJourney";
}

<div class="container">
    <h1>Account Details</h1>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Welcome, @Model.Username!</h5>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Total Points: </strong> @Model.Score</p>
            <p><strong>Dailies Completed:</strong> @Model.RiddlesSolved</p>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6">
            <h3>Actions</h3>
            
            <form asp-action="ChangePassword" asp-controller="Account" method="post">
                <button type="submit" class="btn btn-warning">Change Password</button>
            </form>
            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                <button type="submit" class="btn btn-warning">Forgot Password</button>
            </form>
            
        </div>
        <div class="col-md-6">
            <h3>Danger Zone</h3>
            <form asp-action="Logout" asp-controller="Account" method="post" class="mt-2">
                <button type="submit" class="btn btn-secondary">Logout</button>
            </form>
            <form asp-action="DeleteAccount" asp-controller="Account" method="post" onsubmit="return confirm('Are you sure you want to delete your account? This action cannot be undone!');">
                <button type="submit" class="btn btn-danger">Delete Account</button>
            </form>

        </div>
    </div>
</div>
@if (TempData["PassChangeSuccess"] != null)
{
    <div id="feedbackSuccess" class="alert alert-success" style="text-align: center;">
        @TempData["PassChangeSuccess"]
    </div>

    <script>
        setTimeout(() => {
            document.getElementById('feedbackSuccess').style.display = 'none';
        }, 5000);
    </script>
}