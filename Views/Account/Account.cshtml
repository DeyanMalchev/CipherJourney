
@{
    ViewData["Title"] = "CipherJourney";
}

<div class="container">
    <h1>Account Details</h1>
    <div class="card mb-4">
        <div class="card-body">
            @* <h5 class="card-title">Welcome, @Model.Username!</h5>
            <p><strong>Email:</strong> @Model.Email</p> *@
            @* 
            <p><strong>Points:</strong> @Model.UserPoints.Score</p>
            <p><strong>Account Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")</p> *@

